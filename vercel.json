{
  "functions": {
    "api/index.js": {
      "runtime": "@vercel/node@18",
      "maxDuration": 30
    }
  },
  "builds": [
    {
      "src": "sleeper-lineup-watch-ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/health", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/sleeper-lineup-watch-ui/dist/index.html" }
  ]
}